from pyspark.sql import SparkSession
from pyspark.sql import functions as F
from pyspark.sql.functions import col, regexp_replace, sum, round, corr, desc, asc
from sedona.spark import *
import time

spark = SparkSession.builder.getOrCreate()
sc = spark.sparkContext

print(f"Executors: {sc.getConf().get('spark.executor.instances')}")
print(f"Master: {sc.master}")





path_crimes = "s3://initial-notebook-data-bucket-dblab-905418150721/project_data/LA_Crime_Data/LA_Crime_Data_2020_2025.csv"
path_cesus_blocks_fields = "s3://initial-notebook-data-bucket-dblab-905418150721/project_data/LA_Census_Blocks_2020_fields.csv"
path_income = "s3://initial-notebook-data-bucket-dblab-905418150721/project_data/LA_income_2021.csv"

crimes = spark.read.option("header", "true")\
    .csv(path_crimes)

census_fields = spark.read.option("header", "true")\
    .csv(path_cesus_blocks_fields)

income = spark.read.option("header", "true")\
    .option("delimiter", ";")\
    .csv(path_income)


sedona = SedonaContext.create(spark)

geojson_path = "s3://initial-notebook-data-bucket-dblab-905418150721/project_data/LA_Census_Blocks_2020.geojson"
blocks_df = sedona.read.format("geojson") \
            .option("multiLine", "true").load(geojson_path) \
            .selectExpr("explode(features) as features") \
            .select("features.*")

blocks = blocks_df.select( \
                [col(f"properties.{col_name}").alias(col_name) for col_name in \
                blocks_df.schema["properties"].dataType.fieldNames()] + ["geometry"]) \
            .drop("properties") \
            .drop("type")

LA_areas = blocks.filter(col("CITY") == "Los Angeles") \
                .groupBy("COMM") \
                .agg(ST_Union_Aggr("geometry").alias("geometry"))


# Calculate crimes per community
crimes_numeric = crimes.withColumn(
    "point",
    ST_Point(
        F.col("LON").cast("double"),
        F.col("LAT").cast("double")
    )
).where(
    F.substring(F.col("DATE OCC"), 1, 4).isin("2020", "2021")
)

crimes_per_area = (
    crimes_numeric.join(
        LA_areas,
        ST_Contains(LA_areas["geometry"], crimes_numeric["point"]),
        "inner"
    )
    .groupBy("COMM", "geometry")
    .agg(F.count("*").alias("crime_count"))
)
crimes_per_area.explain()


blocks_income = blocks.join(income, blocks["ZCTA20"] == income["Zip Code"])
blocks_income.explain()

blocks_total_income = blocks_income.withColumn(
    "cleaned_income", 
    regexp_replace(col("Estimated Median Income"), "[$,+,-]", "").cast("double")
).withColumn(
    "block_income", 
    col("cleaned_income") * col("HOUSING20")
)


community_stats = blocks_total_income.groupBy("COMM").agg(
    sum("POP20").alias("community_population"),
    sum("block_income").alias("community_income")
).select("COMM", "community_income", "community_population")


crimes_per_person = crimes_per_area.join(community_stats, "COMM") \
                                   .withColumn("crime_frequency", \
                                     crimes_per_area["crime_count"] / community_stats["community_population"])
# crimes_per_person.show()


community_gdp = community_stats.withColumn("average_income", round(col("community_income") / col("community_population"), 0)).select("COMM", "average_income")
# community_gdp.show()


# Compare average income to crime rate
import time
final_stats = crimes_per_person.join(community_gdp, "COMM").select("COMM", "crime_frequency", "average_income")
final_stats.explain()

start = time.time()
final_stats.collect()
end = time.time()

print(f"Computation took {end - start} sec")


print("Correlation for All Areas:")
final_stats.select(corr("crime_frequency", "average_income").alias("correlation")).show()

print("Correlation for Top 10 Income Areas:")
final_stats.orderBy(desc("average_income")).limit(10)\
    .select(corr("crime_frequency", "average_income").alias("correlation")).show()

print("Correlation for Bottom 10 Income Areas:")
final_stats.orderBy(asc("average_income")).limit(10)\
    .select(corr("crime_frequency", "average_income").alias("correlation")).show()
